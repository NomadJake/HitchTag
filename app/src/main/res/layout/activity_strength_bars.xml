<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.crosscharge.hitch.StrengthBars">

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="320dp"
        android:layout_height="14dp"
        app:rcRadius="10dp"
        app:rcBackgroundPadding="4dp"
        app:rcReverse="false"
        app:rcProgressColor="@color/colorPrimary"
        app:rcBackgroundColor="@color/colorPrimaryDark"
        android:id="@+id/progressBar"
        android:layout_marginTop="148dp"
        android:layout_below="@+id/progressBar2"
        android:layout_centerHorizontal="true" />


    <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
        android:id="@+id/progress_2"
        android:layout_height="32dp"
        android:layout_width="300dp"
        app:rcBackgroundPadding="10dp"
        app:rcIconSize="50dp"
        app:rcIconPadding="5dp"
        android:layout_below="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar2"
        android:layout_marginTop="75dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:max="4"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
